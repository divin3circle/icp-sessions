{
    "scripts": {
        "dfx_install": "DFX_VERSION=0.15.1 sh -ci \"$(curl -fsSL https://sdk.dfinity.org/install.sh)\"",
        "replica_start": "dfx start --background",
        "replica_stop": "dfx stop",
        "canister_deploy_local": "dfx deploy skill_db_dapp",
        "canister_deploy_mainnet": "dfx deploy --network ic skill_db_dapp",
        "canister_uninstall": "dfx canister uninstall-code skill_db_dapp",
        "canister_call_get_message": "dfx canister call skill_db_dapp getMessage",
        "canister_call_set_message": "dfx canister call skill_db_dapp setMessage '(\"Hello world!\")'"
    },
    "dependencies": {
        "azle": "0.19.0"
    }
}

